  %body
    %div#wrapper
      %header
        %hgroup
          %h1 H1 text
          %h2
            %a{:href => "/"} h2 text
      %nav
        %ul
          - (2..5).each do |i|
            %li
              %a.js-pjax{:href => ":data#{i}"} navi #{i}
      %article#main= @data[:section]
      %div#left_box
        %h3 right nav
        %div
          - 50.times do |i|
            right 
        - 3.times do |i|
          %img{:src => "images/sample_bnr_off.gif", :alt=>"gazo"}
      %footer
        %div#copyright Copyright 2011 
        %div#pagetop
          %img{:src => "images/pagetop_off.gif", :alt=>"pagetop"}
