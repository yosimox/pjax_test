  %head
    %title= @data[:title]
    %meta{'http-equiv' => 'content', :content => 'text/html; charset=utf-8'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => 'css/common.css'}
    / [if lt IE 9] <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script> <![endif]
